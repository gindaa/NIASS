<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Form16Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/unit_pelayanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Unit Pelayanan Kesehatan"
                    android:editable="false"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/kabkotar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kab / Kota"
                    android:text="Nias Selatan"
                    android:editable="false"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:hint="Tanggal : "
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tanggalregisf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:hint=" - "
                    android:textSize="19sp" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nikKontakr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIK Kontak*" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kasus Index"
                android:textSize="26sp"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/namakk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama*" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sensitifResistan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sensitif / Resistan*" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spprovinsikontak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kabupaten"
                android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spkabupatenkontak"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan"
                android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spkecamatankontak"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelurahan"
                android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spkelurahankontak"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/rtrwkontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rt/Rw" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/alamatxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat*" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="28dp"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/namaKontakx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Kontak*" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spgender2"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"/>
            <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur Laki-Laki"
            android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spumurlform16"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur Perempuan"
                android:textSize="19sp"/>
            <Spinner
                android:id="@+id/spumurpform16"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>




            <android.support.design.widget.TextInputLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="279dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/alamatKontakx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Kontak*" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Akhir*"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/sphasilakhir"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tindak Lanjut* "
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/sptindaklanjut"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Tanggal mulai PP INH"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggalppinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:hint="Pilih Tanggal"
                    android:textSize="19sp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil PP INH"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/spppinh"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:theme="@style/MooTheme"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/submitfaskes"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>